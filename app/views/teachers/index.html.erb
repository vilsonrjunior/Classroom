
<p id="notice"><%= notice %></p>

<% if current_teacher.admin? %>
<div class="col-xs-12 col md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">
        <i class="pe-7s-users"></i>
        Listing Teachers
      </h4>
      <hr/>
      <%= link_to new_teacher_path, class: 'btn btn-primary btn-fill' do %>
        <i class="fa fa-plus-square"></i>
        New Teacher
      <% end %>
      <br/>
      <br/>
    </div>
    <div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Language</th>
            <th>Email</th>
            <th>Admin?</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @teachers.each do |teacher| %>
            <tr>
              <td>
                <%= teacher.first_name %>
              </td>
              <td>
                <%= teacher.last_name%>
              </td>
              <td>
                <%= teacher.language %>
              </td>
               <td>
                <%= teacher.email %>
              </td>
              <td>
                <%= teacher.admin? %>
              </td>
              <td>
                <%= link_to teacher, class: 'btn btn-info btn-sm' do %>
                  <i class="fa fa-eye"></i>
                  Show
                <% end %>
                <%= link_to edit_teacher_path(teacher), class: 'btn btn-primary btn-sm' do %>
                  <i class="fa fa-edit"></i>
                  Edit
                <% end %>
                <%= link_to teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do %>
                  <i class="fa fa-trash"></i>
                  Delete
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br/>
  </div>
</div>
<% elsif %>
<% student_signed_in? %>
<div class="col-xs-12 col md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">
        <i class="pe-7s-users"></i>
        Professor
      </h4>
      <hr/>
      <br/>
      <br/>
    </div>
    <div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Lingua</th>
            <th>email</th>
          </tr>
        </thead>
        <tbody>
          <% if current_student.course != nil %>
            <tr>
              <td>
                <%= current_student.teacher.first_name %>
              </td>
              <td>
                <%= current_student.teacher.last_name %>
              </td>
              <td>
                <%= current_student.teacher.language %>
              </td>
              <td>
                <%= link_to current_student.teacher, class: 'btn btn-info btn-sm' do %>
                  <i class="fa fa-eye"></i>
                  Show
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br/>
  </div>
</div>
<% elsif %>
<% parent_signed_in? %>
<div class="col-xs-12 col md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">
        <i class="pe-7s-users"></i>
        Professor(es)
      </h4>
      <hr/>
      <br/>
      <br/>
    </div>
    <div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Aluno</th>
            <th>Nome do professor</th>
            <th>Lingua</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <% current_parent.students.each do |student| %>
            <tr>
              <td>
                <%= student.first_name %>
              </td>
              <td>
                <%= student.teacher.first_name %>
              </td>
              <td>
                <%= student.teacher.language %>
              </td>
              <td>
                <%= student.teacher.email %>
              </td>
              <td>
                <%= link_to student.teacher, class: 'btn btn-info btn-sm' do %>
                  <i class="fa fa-eye"></i>
                  Show
                <% end %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
    <br/>
  </div>
</div>
<% else %>
<p>Private page</p>
<% end %>

