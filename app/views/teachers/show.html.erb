<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>
<div class="col-xs-12 col md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">Teacher</h4>
      <hr/>
    </div>
    <div class="content">
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <table class="table">
            <tr>
               <%= image_tag @teacher.photo, size: '150x150' %>
            </tr>
            <tr>
              <th>Name</th>
              <td>
                <%= @teacher.first_name %> <%=@teacher.last_name %>
              </td>
            </tr>
            <tr>
              <th>Language</th>
              <td>
                <%= @teacher.language %>
              </td>
            </tr>

            <th>Email</th>
              <td>
                <%= @teacher.email %>
              </td>
            </tr>

          </table>
        </div>
        <div class="col-md-6 col-xs-12">
          <%= week_calendar number_of_weeks: 2 do |date| %>
  <%= date %>
<% end %>
          <div id="show-teacher-map"></div>
        </div>
      </div>
    </div>
    <div class="footer">
      <%= link_to teachers_path, class: 'btn btn-default' do %>
        <i class="fa fa-chevron-left"></i>
        Back
      <% end %>
      <%= link_to edit_teacher_path(@teacher), class: 'btn btn-primary btn-fill' do %>
        <i class="fa fa-edit"></i>
        Edit
      <% end %>
    </div>
    <br/>
  </div>
</div>
