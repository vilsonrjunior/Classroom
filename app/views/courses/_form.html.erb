
<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :level %>
    <%= f.input :description %>
    <%= f.input :teacher_id %>
    <%= f.input :student_id %>

  </div>

  <div class="form-actions">

    <%= f.button :submit %>
  </div>
<% end %>
