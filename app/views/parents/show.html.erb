<% if notice.present? %>
  <div class="alert alert-info" role="alert">
    <%= notice %>
  </div>
<% end %>
<div class="wrapper1">
<div class="col-xs-12 col md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">Parent</h4>
      <hr/>
    </div>
    <div class="content">
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <table class="table">
            <!-- <tr>
              <th>Image</th>
              <td>

              </td>
            </tr> -->
            <tr>
              <th>Name</th>
              <td>
                <%= @parent.first_name %>
              </td>
            </tr>
            <tr>
              <th>Last name</th>
              <td>
                <%= @parent.last_name %>
              </td>
            </tr>
            <tr>
              <th>Address</th>
              <td>
                <%= @parent.address %>
              </td>
            </tr>
            <tr>
              <th>Email</th>
              <td>
                <%= @parent.email %>
              </td>
            </tr>
            <tr>
              <th>Students</th>
              <td>
                <% @parent.students.each do |student|%>
                 <li style="list-style: none;"><%=student.first_name %></li>
                <% end %>
              </td>
            </tr>
          </table>
        </div>

      </div>
    </div>
    <div class="footer">
      <%= link_to parents_path, class: 'btn btn-default' do %>
        <i class="fa fa-chevron-left"></i>
        Back
      <% end %>
      <%= link_to edit_parent_path(@parent), class: 'btn btn-primary btn-fill' do %>
        <i class="fa fa-edit"></i>
        Edit
      <% end %>
    </div>
    <br/>
  </div>
</div>
</div>
