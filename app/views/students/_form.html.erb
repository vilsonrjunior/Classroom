
<%= simple_form_for(@student) do |f| %>
  <%= f.error_notification %>
  <% DateTime.now.strftime("%d/%m/%Y - %H:%M %p") %>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <%= f.input :first_name %>
       <%= f.input :last_name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :age, as: :date, start_year: Date.today.year - 60,
                             end_year: Date.today.year - 3, discard_day: false,
                              order: [:day, :month, :year] %>

      <%= f.input :course_id, collection: Course.all %>
    </div>

    </div>
  </div>
  <%= f.button :submit, class: 'btn btn-primary btn-fill' %>
<% end %>
