<% if notice.present? %>
  <div class="alert alert-info" role="alert">
    <%= notice %>
  </div>
<% end %>
<div class="col-xs-12 col md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">Student</h4>
      <hr/>
    </div>
    <div class="content">
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <table class="table">
            <tr>
              <th>Image</th>
              <td>
                <%#image_tag @student.photo, size: '150x150' %>
              </td>
            </tr>
            <tr>
              <th>Name</th>
              <td>
                <%= @student.first_name %> <%=@student.last_name %>
              </td>
            </tr>
            <tr>
              <th>Parent Name</th>
              <td>
                <%= link_to "#{@student.parent.first_name}", @student.parent %>
              </td>
            </tr>
            <tr>
              <th>Date of Birth</th>
              <td>
                <%= @student.age %>
              </td>
            </tr>
            <tr>
              <th>level</th>
              <td>
                <%= @student.level %>
              </td>
            </tr>
            <tr>
              <th>Email</th>
              <td>
                <%= @student.email %>
              </td>
            </tr>
            <tr>
              <th>Course</th>
              <% if @student.course != nil %>
              <td>
                <%= link_to "#{@student.course.name}", @student.course %>
              </td>
              <% else %>
              <td>
                You're not enrolled in any course yet
              </td>
              <% end %>
            </tr>
             <tr>
              <% if @student.course != nil %>
              <th>Teacher</th>
              <td>
                <%= @student.teacher.first_name %>
              </td>
              <% else %>
              <td>
                <p></p>
              </td>
              <% end %>
            </tr>
          </table>
        </div>
    </div>
    <div class="footer">
      <%= link_to students_path, class: 'btn btn-default' do %>
        <i class="fa fa-chevron-left"></i>
        Back
      <% end %>
      <%= link_to edit_student_path(@student), class: 'btn btn-primary btn-fill' do %>
        <i class="fa fa-edit"></i>
        Edit
      <% end %>
    </div>
    <br/>
  </div>
</div>
